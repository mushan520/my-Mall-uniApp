{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^Xtx(.*)": "@/components/Xtx$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white",
        "enablePullDownRefresh": false,
        "backgroundColorTop": "#28bb9c"
      }
    },
    {
      "path": "pages/category/index",
      "style": {
        "navigationBarTitleText": "商品分类"
      }
    },
    {
      "path": "pages/cart/index",
      "style": {
        "navigationBarTitleText": "购物车",
        "backgroundColorTop": "#f7f7f8",
        "backgroundColorBottom": "#f7f7f8"
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/cart/default",
      "style": {
        "navigationBarTitleText": "购物车"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/login/phone",
      "style": {
        "navigationBarTitleText": "绑定手机号"
      }
    },
    {
      "path": "pages/my/account",
      "style": {
        "navigationBarTitleText": "账户与安全"
      }
    },
    {
      "path": "pages/my/address/index",
      "style": {
        "navigationBarTitleText": "地址管理"
      }
    },
    {
      "path": "pages/my/address/form",
      "style": {
        "navigationBarTitleText": "新建地址"
      }
    },
    {
      "path": "pages/my/profile",
      "style": {
        "navigationBarTitleText": "个人资料",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/my/settings",
      "style": {
        "navigationBarTitleText": "账户管理"
      }
    },
    {
      "path": "pages/my/interest",
      "style": {
        "navigationBarTitleText": "兴趣分类"
      }
    },
    {
      "path": "pages/search/index",
      "style": {
        "navigationBarTitleText": "搜索商品"
      }
    },
    {
      "path": "pages/recommend/index",
      "style": {
        "navigationBarTitleText": "特惠推荐"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages/goods",
      "pages": [
        {
          "path": "index",
          "style": {
            "navigationBarTitleText": "商品详情",
            "navigationStyle": "custom"
          }
        },
        {
          "path": "list",
          "style": {
            "navigationBarTitleText": "商品列表"
          }
        },
        {
          "path": "filter/index",
          "style": {
            "navigationBarTitleText": "筛选"
          }
        }
      ]
    },
    {
      "root": "pages/order",
      "pages": [
        {
          "path": "index",
          "style": {
            "navigationBarTitleText": "我的订单"
          }
        },
        {
          "path": "payment",
          "style": {
            "navigationBarTitleText": "订单支付",
            "navigationStyle": "custom",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "logistics",
          "style": {
            "navigationBarTitleText": "查看物流"
          }
        },
        {
          "path": "detail",
          "style": {
            "navigationBarTitleText": "订单详情",
            "navigationStyle": "custom",
            "navigationBarTextStyle": "white"
          }
        },
        {
          "path": "create",
          "style": {
            "navigationBarTitleText": "填写订单"
          }
        }
      ]
    }
  ],
  "globalStyle": {
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTextStyle": "black",
    "backgroundColorTop": "#f6f6f6"
  },
  "tabBar": {
    "color": "#333",
    "selectedColor": "#27ba9b",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/index/index",
        "iconPath": "static/tabs/home_default.png",
        "selectedIconPath": "static/tabs/home_selected.png"
      },
      {
        "text": "分类",
        "pagePath": "pages/category/index",
        "iconPath": "static/tabs/category_default.png",
        "selectedIconPath": "static/tabs/category_selected.png"
      },
      {
        "text": "购物车",
        "pagePath": "pages/cart/index",
        "iconPath": "static/tabs/cart_default.png",
        "selectedIconPath": "static/tabs/cart_selected.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/my/index",
        "iconPath": "static/tabs/user_default.png",
        "selectedIconPath": "static/tabs/user_selected.png"
      }
    ]
  }
}
